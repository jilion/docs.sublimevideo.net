    %td.features.html5.yes.partial Partial
  %tr
    -#%td.platform.empty
    -#%td.browser.empty
    %td.os 4+
    %td.html5.yes WebM
    %td.features.html5.yes Full
  %tr.alt
    %td.platform
      = image_tag "supported/kindle_fire.png", size: "90x59", alt: "Kindle Fire"
      %br
      Kindle Fire
    %td.browser Silk
    %td.os 1G, HD
    %td.html5.yes MP4
    %td.features.html5.yes.partial Partial
  %tr
    %td.platform{ rowspan: 5 }
      = image_tag "supported/ios.png", size: "64x64", alt: "iOS"
      %br
      iOS
    %td.browser{ rowspan: 2 } iPhone
    %td.os < 4
    %td.html5.yes MP4
    %td.features.empty
  %tr
    -#%td.platform.empty
    -#%td.browser.empty
    %td.os 4+
    %td.html5.yes MP4
    %td.features.html5.yes.partial Partial
  %tr
    -#%td.platform.empty
    %td.browser{ rowspan: 2 } iPad
    %td.os < 4
    %td.html5.yes MP4
    %td.features.empty
  %tr
    -#%td.platform.empty
    -#%td.browser.empty
    %td.os 4
    %td.html5.yes MP4
    %td.features.html5.yes.partial Partial
  %tr
    -#%td.platform.empty
    %td.browser.empty
    %td.os 5+
    %td.html5.yes MP4
    %td.features.html5.yes Full
  %tr.alt
    %td.platform{ rowspan: 2 }
      = image_tag "supported/windows_phone.png", size: "126x39", alt: "Windows Phone"
      %br
      Windows Phone
    %td.browser{ rowspan: 2 } Windows Phone's IE
    %td.os < 7.5
    %td.html5.yes MP4
    %td.features.empty
  %tr
    -#%td.platform.empty
    -#%td.browser.empty
    %td.os 7.5+
    %td.html5.yes MP4
    %td.features.html5.yes.partial Partial
  %tr
    %td.platform
      = image_tag "supported/windows.png", size: "40x40", alt: "Windows RT"
      %br
      Windows RT
    %td.browser Tablets
    %td.os 8+
    %td.html5.yes MP4
    %td.features.html5.yes Full
  %tr.alt
    %td.platform
      = image_tag "supported/blackberry.png", size: "105x42", alt: "BlackBerry"
      %br
      BlackBerry
    %td.browser BlackBerry browser
    %td.os
    %td.html5.yes MP4
    %td.features.empty
  %tr.last
    %td.platform Other mobiles
    %td.browser
    %td.os
    %td.html5.yes MP4
    %td.features.empty


