- @page_title = "Supported browsers and devices"

%h2= @page_title

:textile
  h3(#desktop). Desktop

%br
All desktop browsers below have full SublimeVideo design and features support.

%table.supported_browsers.desktop
  %colgroup
    %col
    %col.alt
  %tr.alt
    %th.browser Browser
    %th.formats{ colspan: 3 } Supported video formats
  %tr
    %td.browser
      = image_tag "supported/ie_8.png", size: "64x64", alt: "Internet Explorer 6-8"
      %br
      Internet Explorer 6-8
    %td.flash.yes{ colspan: 3 }= "MP4*"
  %tr.alt
    %td.browser
      = image_tag "supported/ie_9.png", size: "64x64", alt: "Internet Explorer 6-8"
      %br
      Internet Explorer 9+
    %td.html5.yes{ colspan: 3 }= "MP4"
  %tr
    %td.browser
      = image_tag "supported/firefox.png", size: "64x64", alt: "Firefox"
      %br
      Firefox 3.6+
    %td.html5.yes= "MP4*"
    %td.html5.yes= "WebM (4+)"
    %td.html5.yes= "Ogg"
  %tr.alt
    %td.browser
      = image_tag "supported/chrome.png", size: "64x64", alt: "Chrome"
      %br
      Chrome 3+
    %td.html5.yes= "MP4"
    %td.html5.yes= "WebM (6+)"
    %td.html5.yes= "Ogg"
  %tr
    %td.browser
      = image_tag "supported/opera.png", size: "64x64", alt: "Opera"
      %br
      Opera 10.5+
    %td.html5.yes= "MP4*"
    %td.html5.yes= "WebM (10.6+)"
    %td.html5.yes= "Ogg"
  %tr.alt
    %td.browser
      = image_tag "supported/safari.png", size: "64x64", alt: "Safari"
      %br
      Safari 4+
    %td.html5.yes{ colspan: 3 }= "MP4"

%small * requires Flash plugin installed

:textile
  h3(#mobile). Mobile

%table.supported_browsers.mobile
  %colgroup
    %col
    %col.alt
    %col
    %col.alt
  %tr.alt
    %th.platform Mobile platform
    %th.browser Browser or device
    %th.os OS version
    %th.formats Video playback support
    %th.features SublimeVideo design & features support
  %tr
    %td.platform{ rowspan: 7 }
      = image_tag "supported/android.png", size: "64x64", alt: "Android"
      %br
      Android
    %td.browser{ rowspan: 3 } Stock Android browser, Dolphin and others
    %td.os 1.x, 2.x
    %td.html5.yes MP4
    %td.features.empty
  %tr
    -#%td.platform.empty
    -#%td.browser.empty
    %td.os 3, 4.0
    %td.html5.yes MP4
    %td.features.html5.yes.partial Partial
  %tr
    -#%td.platform.empty
    -#%td.browser.empty
    %td.os 4.1+
    %td.html5.yes MP4
    %td.features.html5.yes Full
  %tr
    -#%td.platform.empty
    %td.browser Chrome
    %td.os 4+
    %td.html5.yes MP4
    %td.features.html5.yes Full
  %tr
    -#%td.platform.empty
    %td.browser{ rowspan: 3 } Firefox
    %td.os 2.x
    %td.html5.yes WebM
    %td.features.empty
  %tr
    -#%td.platform.empty
    -#%td.browser.empty
    %td.os 3.x
