- @page_title = "Search results for “#{params[:q]}”"

%h2= @page_title

%ul
  - @results['results'].each do |doc|
    %li
      = link_to "#{Navigation.section_for_page(doc['docid'])}: #{doc['title']}", doc['docid']

%p= raw "You couldn't find what you're looking for? Be sure to check out our #{link_to "Help page", layout_url('help')}."
