- feed_name = stage?('beta') ? 'sublimevideo-releases-beta' : 'sublimevideo-releases'
= content_for :header, auto_discovery_link_tag(:atom, "http://feeds.feedburner.com/#{feed_name}")
- @page_title = "#{'Beta ' if stage?('beta')}Release Notes"

%h2= @page_title

%p= raw "Follow SublimeVideo release notes in your feed reader: #{link_to "Subscribe to the feed", "http://feeds.feedburner.com/#{feed_name}", title: "Atom feed"}."

#releases
  - @releases.each do |release|
    - id = release.datetime.strftime("%Y-%m-%d-%H-%M")
    %h4{ id: id }
      - if stage?('beta')
        = link_to "##{id}" do
          %span{ style: 'background: yellow' }= release.version
          = l(release.datetime, format: :long_without_time)
      - else
        = link_to l(release.datetime, format: :long), "##{id}"
    = release.content
