.two-col-content h3 {
  font-size:1.6em;
  padding:1em 0 0.4em;
  margin-bottom:0.5em;
  border-bottom: 3px solid #b8c7d9;
}

.two-col-content h3 code {
  font-size:0.85em;
}

.two-col-content h4 {
  padding-top:0.8em;
}

.two-col-content h2 a,
.two-col-content h3 a,
.two-col-content h4 a {
  color:$darkblue;
}

.two-col-content ul, .two-col-content ol {
  font-size:1.2em;
  line-height:1.6em;
  padding:0.3em 0;
}

.two-col-content ol {
  padding-left:1.5em;
}

.two-col-content ul > li {
  padding:0 0 0.5em;
}

.two-col-content ul > li:before {
  @include inline-block;
  content:"\e004";
  font-family:'SV-Icons';
  font-size:0.4em;
  line-height:1;
  padding-right:1.5em;
  position:relative;
  top:-0.4em;
}

.two-col-content p code, .two-col-content ul code {
  font-family:Monaco, Courier, monospace;
  font-size:13px;
  background:#c8d5f0;
  color:#224579;
  padding:1px 4px;
  text-shadow:none;
  @include border-top-radius(4px);
  @include border-bottom-radius(4px);
}

.two-col-content p strong code, .two-col-content ul strong code {font-weight:normal;}

.two-col-content p span.param code, .two-col-content ul span.param code {
  color:#b53148;
}

.two-col-content p a.c:hover, .two-col-content ul a.c:hover {
  border:none;
  -moz-box-shadow: none;
  -webkit-box-shadow: none;
  box-shadow: none;
}

.two-col-content p a code, .two-col-content ul a code {
  background:#abc1ee;
  border-bottom:1px solid rgba(0,0,0,0.3);
  @include transition(background 0.25s linear);
}

.two-col-content p a:hover code, .two-col-content ul a:hover code {
  background:#aadefe;
}

.two-col-content h3 a code, .two-col-content h4 a code {
  color:#00235a;
  background:transparent;
  border-bottom:none;
}

.two-col-content h3 a:hover code, .two-col-content h4 a:hover code {
  background:transparent;
  border-bottom:none;
}

table.simple {
  width:100%;
  font-size:1.2em;
  border-collapse:collapse;
  margin:10px 0;
}

table.simple th {
  color:#1c263b;
  font-weight:400;
}

table.simple th, table.simple td {
  padding:0.4em 0.5em;
  border:1px solid #a6b6cc;
  text-align:left;
  -moz-box-shadow:inset rgba(255,255,255,0.5) 0 1px 0;
  -webkit-box-shadow:inset rgba(255,255,255,0.5) 0 1px 0;
  box-shadow:inset rgba(255,255,255,0.5) 0 1px 0;
}

.red, .red strong {
  color:#CF0039;
}

.vert-mid {
  @include inline-block;
  vertical-align:middle;
}

span.label {
  text-transform:uppercase;
  font-size:0.5em;
  font-weight:400;
  color:#fff;
  padding:0.4em 0.4em 0.6em;
  line-height:1em;
  letter-spacing:1px;
  text-shadow:none;
  float:left;
  width:57px;
  margin:0.9em 1em 0 0;
  display:block;
  text-align:right;
  @include border-top-radius(4px);
  @include border-bottom-radius(4px);
}

span.label.new {background-color:#59b374}
span.label.improved {background-color:#d88345}
span.label.fixed {background-color:#a050b0}

.content_wrapper .video_wrap {
  width:640px;
  border:1px solid #fff;
  -moz-box-shadow: rgba(36,60,96,0.7) 0 2px 15px;
  -webkit-box-shadow: rgba(36,60,96,0.7) 0 21px 15px;
  box-shadow: rgba(36,60,96,0.7) 0 2px 15px;
}

#releases h4 a .version {
  display:inline-block;
  background:#fff1b6;
  padding:0 0.4em;
  color:#9b794e;
  font-size:0.7em;
}

#releases ul {
  padding:13px 0 17px;
  border-bottom: 2px solid rgba(0, 48, 121, 0.16);
}

#releases ul:last-child {
  border:none;
  -moz-box-shadow:none;
  -webkit-box-shadow:none;
  box-shadow:none;
}

#releases ul ul {
  padding-top:0;
}

#releases ul > li:before {
  display:none;
}

.supported_browsers {
  margin:20px 0;
}

.supported_browsers, .supported_browsers table {
  width:100%;
  border-collapse:collapse;
}

table.data_settings {
  font-size:11px;
}

.supported_browsers tr.alt {
  background:rgba(0,0,0,0.02);
}

.supported_browsers th, .supported_browsers td {
  padding:4px;
  border:1px solid #8a9ab2;
  -moz-box-shadow:inset rgba(255,255,255,0.5) 0 1px 0;
  -webkit-box-shadow:inset rgba(255,255,255,0.5) 0 1px 0;
  box-shadow:inset rgba(255,255,255,0.5) 0 1px 0;
}

.supported_browsers th {
  color:#1c263b;
  font-weight:400;
  border-color:#51637d;
  background:rgba(0,0,0,0.04);
  -moz-box-shadow:inset rgba(255,255,255,0.3) 0 1px 0;
  -webkit-box-shadow:inset rgba(255,255,255,0.3) 0 1px 0;
  box-shadow:inset rgba(255,255,255,0.3) 0 1px 0;
}

.supported_browsers table th, .supported_browsers table td {
  font-size:1.2em;
  border:none;
}

.supported_browsers .platform, .supported_browsers.mobile .browser {text-align:center;border-bottom:none;}
.supported_browsers tr.last .platform, .supported_browsers tr.last .browser {border-bottom:1px solid #8a9ab2;}
.supported_browsers .platform.empty, .supported_browsers .browser.empty {
  border-bottom:none;
  border-top:none;
  -moz-box-shadow:none;
  -webkit-box-shadow:none;
  box-shadow:none;
}

.supported_browsers .browser, .supported_browsers.mobile .platform, .supported_browsers .os {
//  font-size:13px;
  text-align:center;
}

.supported_browsers .html5, .supported_browsers .flash {
  padding:0;
  text-align:center;
//  font-size:12px;
  text-transform:uppercase;
}

.supported_browsers .html5 th, .supported_browsers .flash th {
  text-transform:none;
}

.supported_browsers .html5 span, .supported_browsers .flash span {
  display:none;
}

.supported_browsers td.html5.yes, .supported_browsers td.flash.yes {
  background:#cff1d1;
  color:#006a06;
}

.supported_browsers td.html5.yes.partial {
  background:#f1ebcf;
  color:#bda669;
}

.supported_browsers td.html5.yes td.icon, .supported_browsers td.flash.yes td.icon {
  height:40px;
  background:#cff1d1 url(<%= asset_path 'check_icon.png' %>) no-repeat center;
}

.supported_browsers td.html5.yes.partial td.icon {background:url(<%= asset_path 'warning_icon.png' %>) no-repeat center;}

.supported_browsers tr.labels td {
  width:30px;
  border:1px solid #77aa78;
  border-bottom:none;
}

.supported_browsers tr.labels td:first-child {
  border-left:none;
}

.supported_browsers td.html5.no, .supported_browsers td.flash.no {
  background:#f1cfcf;
}

.supported_browsers td.features {
  text-transform:none;
}

.supported_browsers td.notes {
  width:190px;
  font-size:12px;
  line-height:14px;
}

.supported_browsers strong {
  color:#1c263b;
  font-weight:600;
}

table.generic td {
  text-align:center;
//  font-size:14px;
  padding:8px 5px;
}

table.generic td.ok {
  background:#cff1d1;
  color:#367f3b;
  font-size:20px;
}