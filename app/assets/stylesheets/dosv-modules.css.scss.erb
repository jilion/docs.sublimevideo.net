.two-col-content h3 {
  font-size:1.6em;
  padding:1em 0 0.4em;
  margin-bottom:0.5em;
  border-bottom: 3px solid #b8c7d9;
}

.two-col-content h3 code {
  font-size:0.85em;
}

.two-col-content h2 a,
.two-col-content h3 a,
.two-col-content h4 a {
  color:$darkblue;
}

.two-col-content ul {
  font-size:1.2em;
  line-height:1.6em;
  padding:0.3em 0;
}

.two-col-content ul > li {
  padding:0 0 0.5em;
}

.two-col-content ul > li:before {
  @include inline-block;
  content:"\e004";
  font-family:'SV-Icons';
  font-size:0.4em;
  line-height:1;
  padding-right:1.5em;
  position:relative;
  top:-0.4em;
}