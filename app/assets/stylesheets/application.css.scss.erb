#content {
  width:960px;
  margin:0 auto;
  padding:40px 0;
  color:#4a648e;
  text-shadow:rgba(255,255,255,0.9) 0 1px 0;
}

#content a {
  color:#1185ff;
}


.content_wrapper {
  width:640px;
  float:left;
  padding-bottom:40px;
}

.footnotes {
  border-top:1px solid #A6B6CC;
  width:70%;
  margin-top:20px;
}

.footnotes ol {
  font-size:13px;
  line-height:20px;
  padding:10px 0px 15px 20px;
}

#content .footnotes code {font-size:12px}

.content_wrapper h3 {
  color:#00235a;
  font-size:20px;
  font-weight:600;
  padding:20px 0 12px;
  margin:0 0 5px;
  border-bottom: 3px solid #b8c7d9;
}

.content_wrapper h3 code {
  font-weight:normal;
  font-size:17px;
  background:none;
  display:block;
  margin:20px 0 0;
  text-shadow:rgba(255,255,255,0.8) 0 1px 0;
}

#content .content_wrapper h2 a, #content .content_wrapper h3 a, #content .content_wrapper h4 a {
  color:#00235a;
}

#content .content_wrapper h2 a:hover, #content .content_wrapper h3 a:hover, #content .content_wrapper h4 a:hover {
  border-bottom:none;
}

.content_wrapper h4 {
  font-size:16px;
  font-weight:600;
  padding:16px 0 4px;
  color:#00235a;
}

.content_wrapper h4 code {
  font-weight:normal;
  font-size:17px;
  background:none;
  padding:0;
  text-shadow:rgba(255,255,255,0.8) 0 1px 0;
}

.content_wrapper p {
  line-height:24px;
  padding:7px 0;
}

.content_wrapper p strong {
  font-weight:600;
/*  color:#00235a;*/
}

.content_wrapper ul {
  padding:7px 0;
  list-style-type:none;
  line-height:24px;
}

.content_wrapper ul.search_results {
  line-height:36px;
  font-size:20px;
}

.content_wrapper ul li {
  padding:3px 0 3px 16px;
  background:url(<%= asset_path 'bullet.png' %>) no-repeat 0 11px;
}

.content_wrapper ul.search_results li {
  background-position: 0 50%;
}

.content_wrapper ol {
  padding:7px 0 7px 17px;
  line-height:24px;
}

.content_wrapper ol li {
  padding:3px 0;
}

.content_wrapper p code, .content_wrapper ul code {
  font-family:Monaco, Courier, monospace;
  font-size:13px;
  background:#c8d5f0;
  color:#224579;
  padding:1px 4px;
  text-shadow:none;
  -moz-border-radius:4px;
  -webkit-border-radius:4px;
  border-radius:4px;
}

.content_wrapper p strong code, .content_wrapper ul strong code {font-weight:normal;}

.content_wrapper p span.param code, .content_wrapper ul span.param code {
  color:#b53148;
}

.content_wrapper p a.c:hover, .content_wrapper ul a.c:hover {
  border:none;
  -moz-box-shadow: none;
  -webkit-box-shadow: none;
  box-shadow: none;
}

.content_wrapper p a code, .content_wrapper ul a code {
  background:#abc1ee;
  border-bottom:1px solid rgba(0,0,0,0.3);
  -o-transition: background 0.25s linear;
  -moz-transition: background 0.25s linear;
  -webkit-transition: background 0.25s linear;
  transition: background 0.25s linear;
}

.content_wrapper p a:hover code, .content_wrapper ul a:hover code {
  background:#aadefe;
}

#content .content_wrapper h3 a code, #content .content_wrapper h4 a code {
  color:#00235a;
  background:transparent;
  border-bottom:none;
}

#content .content_wrapper h3 a:hover code, #content .content_wrapper h4 a:hover code {
  background:transparent;
  border-bottom:none;
}

.content_wrapper .code, .content_wrapper pre {
  font-family:Monaco, Courier, monospace;
  font-size:13px;
  line-height:22px;
}

.content_wrapper pre {
/*  width:100%;*/
  overflow:auto;
}

