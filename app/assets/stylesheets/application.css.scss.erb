.content_wrapper a:hover {
  padding-bottom:1px;
  border-bottom: 1px solid #81bbfc;
  -moz-box-shadow: rgba(255,255,255,0.5) 0 1px 0;
  -webkit-box-shadow: rgba(255,255,255,0.5) 0 1px 0;
  box-shadow: rgba(255,255,255,0.5) 0 1px 0;
}

.content_wrapper a.lightbox:hover {
  border-bottom:none;
  padding-bottom:0;
}

.content_wrapper img.screenshot {
  border:1px solid #fff;
  -moz-box-shadow: rgba(36,60,96,0.7) 0 2px 15px;
  -webkit-box-shadow: rgba(36,60,96,0.7) 0 21px 15px;
  box-shadow: rgba(36,60,96,0.7) 0 2px 15px;
}

.content_wrapper img.icon {
  position:relative;
  top:3px;
}

.content_wrapper .breakline {
  margin:20px 0 0;
  height:0px;
  border-top:2px solid #b8c7d9;
  border-bottom:1px solid rgba(255,255,255,0.5);
}

.content_wrapper span.red {
  color:#cf0039;
}

#zoomable a {
  display:block;
  width:180px;
  height:76px;
  background:#000;
  position:relative;
  -webkit-box-shadow:rgba(0,0,0,0.4) 0 4px 10px;
  -moz-box-shadow:rgba(0,0,0,0.4) 0 4px 10px;
  box-shadow:rgba(0,0,0,0.4) 0 4px 10px;
}

#zoomable a:hover {
  padding-bottom:0;
  border-bottom:0;
  -webkit-box-shadow:rgba(0,0,0,0.4) 0 4px 10px;
  -moz-box-shadow:rgba(0,0,0,0.4) 0 4px 10px;
  box-shadow:rgba(0,0,0,0.4) 0 4px 10px;
}

#zoomable a span.zoom_icon {
  display:block;
  width:100%;
  height:100%;
  position:absolute;
  top:0;
  left:0;
  background:url(<%= asset_path 'demo/zoom_icon.png' %>) no-repeat bottom right;
  opacity:0.3;
  -o-transition:opacity 0.25s;
  -moz-transition:opacity 0.25s;
  -webkit-transition:opacity 0.25s;
  transition:opacity 0.25s;
}

#zoomable a:hover span.zoom_icon {opacity:1}

img.text_top {
  vertical-align:text-top;
}
