#content {
  width:960px;
  margin:0 auto;
  padding:40px 0;
  color:#4a648e;
  text-shadow:rgba(255,255,255,0.9) 0 1px 0;
}

#content a {
  color:#1185ff;
}

.footnotes {
  border-top:1px solid #A6B6CC;
  width:70%;
  margin-top:20px;
}

.footnotes ol {
  font-size:13px;
  line-height:20px;
  padding:10px 0px 15px 20px;
}

#content .footnotes code {font-size:12px}


.content_wrapper ul {
  padding:7px 0;
  list-style-type:none;
  line-height:24px;
}

.content_wrapper ul.search_results {
  line-height:36px;
  font-size:20px;
}

.content_wrapper ul li {
  padding:3px 0 3px 16px;
  background:url(<%= asset_path 'bullet.png' %>) no-repeat 0 11px;
}

.content_wrapper ul.search_results li {
  background-position: 0 50%;
}

.content_wrapper .code, .content_wrapper pre {
  font-family:Monaco, Courier, monospace;
  font-size:13px;
  line-height:22px;
}

.two-col-content pre {
/*  width:100%;*/
  overflow:auto;
}

.content_wrapper .breakline {
  margin:20px 0 0;
  height:0px;
  border-top:2px solid #b8c7d9;
  border-bottom:1px solid rgba(255,255,255,0.5);
}
